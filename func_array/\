

#include<stdio.h>

char is_upper(char[]);

char is_lower(char);


void main()
{
	char ch[20] = "Hello World";

	char a;

	a = is_upper(ch[20]);
	a = is_lower(ch[20]);
	
	printf("%c", ch[20]);

	printf("%c", ch[20]);
}

char is_upper(char a[])
{
	int i = 0;

	while(a[i] = '\0')
	{
		if(a[i] >= 'a' && a[i] <='z')
		{
			a[i] = a[i] - 32;
			i++;
		}
	}
}
